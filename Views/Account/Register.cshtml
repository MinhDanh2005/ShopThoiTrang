@model ShopThoiTrang.Models.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="auth-container">
    <h1>Đăng ký</h1>
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" required />
            <i class="fas fa-user form-icon"></i>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" required />
            <i class="fas fa-envelope form-icon"></i>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" required />
            <i class="fas fa-lock form-icon"></i>
        </div>
        <div class="form-group form-check">
            <input asp-for="IsAdmin" class="form-check-input" id="isAdmin" />
            <label class="form-check-label" for="isAdmin">Đăng ký với tư cách Admin</label>
        </div>
        <button type="submit" class="btn btn-primary">Đăng ký</button>
        <a asp-action="Login" class="btn btn-link">Đã có tài khoản? Đăng nhập</a>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</div>