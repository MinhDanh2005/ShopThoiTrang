@model ShopThoiTrang.Models.QuanAo

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h1>Xóa sản phẩm</h1>

<h3>Bạn có chắc muốn xóa sản phẩm này?</h3>
<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Ngày ra mắt</dt>
        <dd class="col-sm-10">@Model.ReleaseDate.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Thể loại</dt>
        <dd class="col-sm-10">@Model.Genre</dd>
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("N0") VNĐ</dd>
        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @if (Model.Images.Any())
            {
                foreach (var image in Model.Images)
                {
                    <img src="@image.Url" alt="@Model.Title" style="max-width: 200px; margin: 5px;" />
                }
            }
            else
            {
                <span>Chưa có ảnh</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>